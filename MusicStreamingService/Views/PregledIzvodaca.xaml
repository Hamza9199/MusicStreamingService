<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.PregledIzvodaca"
             
             BackgroundColor="#121212">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Frame BackgroundColor="#1E1E1E" CornerRadius="15" Padding="10" HasShadow="True">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Image Source="{Binding putanjaProfilneSlike}" 
                           WidthRequest="150" 
                           HeightRequest="150" 
                           Aspect="AspectFill" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />

                    <Label Text="{Binding korisnickoIme}" 
                           FontSize="24" 
                           TextColor="White" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <StackLayout>
                <Label Text="Albumi" 
                       FontSize="20" 
                       TextColor="White" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5" />
                <CollectionView ItemsSource="{Binding Albums}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="10" Margin="0,5">
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="{Binding putanjaSlika}" WidthRequest="50" HeightRequest="50" Aspect="AspectFill" />
                                    <Label Text="{Binding naziv}" FontSize="16" TextColor="White" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <StackLayout>
                <Label Text="Playliste" 
                       FontSize="20" 
                       TextColor="White" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5" />
                <CollectionView ItemsSource="{Binding Playlists}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="10" Margin="0,5">
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="{Binding putanjaSlika}" WidthRequest="50" HeightRequest="50" Aspect="AspectFill" />
                                    <Label Text="{Binding naziv}" FontSize="16" TextColor="White" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <StackLayout>
                <Label Text="Pjesme" 
                       FontSize="20" 
                       TextColor="White" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,5" />
                <CollectionView ItemsSource="{Binding Songs}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="10" Margin="0,5">
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding naziv}" FontSize="16" TextColor="White" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
