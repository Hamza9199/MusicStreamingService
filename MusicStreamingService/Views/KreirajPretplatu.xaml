<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.KreirajPretplatu"
             Title="Kreiraj Pretplatu">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <StackLayout>
                <Label 
                    Text="Unesite svoje podatke za pretplatu"
                    FontSize="24" 
                    FontAttributes="Bold"
                    HorizontalOptions="Center" 
                    TextColor="Gray"/>
            </StackLayout>

            <StackLayout Spacing="10">
                <Entry Placeholder="Ime i prezime" FontSize="16"/>
                <Entry Placeholder="Email" FontSize="16"/>
                <Entry Placeholder="Broj kreditne kartice" FontSize="16"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Izaberite plan" FontSize="20" FontAttributes="Bold" TextColor="Gray" Margin="0,0,0,10"/>
                <VerticalStackLayout Spacing="15">
                    <Frame BackgroundColor="#FFDDDD" CornerRadius="10" Padding="10">
                        <StackLayout>
                            <Label Text="Individualni Plan" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="9.99 KM/mjesečno" FontSize="16" TextColor="Gray" />
                            <Label Text="1 korisnički račun, muzika bez reklama, offline slušanje." FontSize="14" TextColor="Gray" />
                            <CheckBox x:Name="IndividualniPlanCheckbox" />
                            <Label Text="Izaberite ovaj plan" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#DDFFDD" CornerRadius="10" Padding="10">
                        <StackLayout>
                            <Label Text="Obiteljski Plan" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="14.99 KM/mjesečno" FontSize="16" TextColor="Gray" />
                            <Label Text="Do 6 korisničkih računa, muzika bez reklama, offline slušanje." FontSize="14" TextColor="Gray" />
                            <CheckBox x:Name="ObiteljskiPlanCheckbox" />
                            <Label Text="Izaberite ovaj plan" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#DDDDFF" CornerRadius="10" Padding="10">
                        <StackLayout>
                            <Label Text="Studentski Plan" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="4.99 KM/mjesečno" FontSize="16" TextColor="Gray" />
                            <Label Text="1 korisnički račun, muzika bez reklama, offline slušanje." FontSize="14" TextColor="Gray" />
                            <CheckBox x:Name="StudentskiPlanCheckbox" />
                            <Label Text="Izaberite ovaj plan" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                    </Frame>
                </VerticalStackLayout>
            </StackLayout>

            <StackLayout>
                <Button 
                    Text="Završi Pretplatu"
                    BackgroundColor="#FF8800"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    HorizontalOptions="Center"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
