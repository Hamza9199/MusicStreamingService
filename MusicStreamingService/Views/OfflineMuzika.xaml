<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.OfflineMuzika"
             Title="OfflineMuzika">
    <VerticalStackLayout>
        <Label 
            Text="VaÅ¡a Offline muzika"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontAttributes="Bold"
            FontSize="18"
            Margin="0,20,0,0"
            />




        <CollectionView ItemsSource="{Binding Pjesme}" Margin="20,30,20,0" SelectionMode="Single"
                SelectedItem="{Binding CurrentSong, Mode=TwoWay}" 
                SelectionChangedCommand="{Binding PlayPauseCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,20" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Image Source="Images/offlineslika.svg" 
                       WidthRequest="50" 
                       HeightRequest="50" 
                       Aspect="AspectFill"
                       Grid.Column="0" />

                        <Label Text="{Binding naziv}" 
                       VerticalOptions="Center"
                       Grid.Column="1"
                       Padding="10,0,0,0" />

                        <ImageButton Source="Images/offlineobrisi"
                             WidthRequest="30"
                             HeightRequest="30"
                             Padding="8"
                             Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ObrisiPjesmu}"
                             CommandParameter="{Binding .}"
                             HorizontalOptions="End"
                             Grid.Column="2" />

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#333" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="Black" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </VerticalStackLayout>
</ContentPage>