<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.Album"
            >

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />

            <Image Source="{Binding putanjaSlika}"
                   WidthRequest="250"
                   HeightRequest="250"
                   Margin="0,20,0,20"
                   Aspect="AspectFill"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <HorizontalStackLayout Margin="0,20,0,20">
                <Label Text="{Binding naziv}"
                       FontSize="24"
                       FontAttributes="Bold"
                       VerticalOptions="Start"
                       HorizontalOptions="Center"
                       Margin="5,0,0,0" />
                

            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <ImageButton
    Source="Images/playlist.svg"
    Command="{Binding Play}"
                     WidthRequest="30"
                     HeightRequest="30"
                     Margin="0,0,10,0"
    />
                <ImageButton
    Source="Images/playlistrepeat.svg"
WidthRequest="30"
                                     Margin="0,0,10,0"

HeightRequest="30"
Command="{Binding Ponavljaj}"
/>
                <ImageButton
    Source="Images/playlistshuffle.svg"
WidthRequest="30"
HeightRequest="30"
Command="{Binding Random}"
/>
            </HorizontalStackLayout>


            <CollectionView ItemsSource="{Binding Pjesme}" Margin="0,10,0,0"  SelectionMode="Single"
                     SelectedItem="{Binding CurrentSong, Mode=TwoWay}"
                     SelectionChangedCommand="{Binding PlayPauseCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                            <StackLayout Orientation="Horizontal" Margin="0,0,0,0">
                                <Image Source="{Binding putanjaSlika}" 
                                       WidthRequest="50" 
                                       HeightRequest="50" 
                                       Aspect="AspectFill" />
                                <Label Text="{Binding naziv}" 
                                       VerticalOptions="Center" 
                                       Padding="20,0" 
                                       Margin="0,0,0,0" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#333" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Black" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
