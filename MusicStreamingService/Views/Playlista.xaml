<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.Playlista"
             
             >

    <ScrollView>
        <VerticalStackLayout Padding="10">

            

            <Image Source="{Binding putanjaSlika}" 
       WidthRequest="250" 
       HeightRequest="250"
                   Margin="0,20,0,20"
       Aspect="AspectFill" 
       HorizontalOptions="Center" 
       VerticalOptions="Center" />

            <HorizontalStackLayout Margin="0,20,0,20">
                <Label 
                        Text="{Binding naziv}"
                        FontSize="24"
                        
                        Margin="5,0,0,0"
                        FontAttributes="Bold"
                        VerticalOptions="Start" 
                        HorizontalOptions="Center" />

                <Label 
                        Text="{Binding KreiraoKorisnik}"
                        FontSize="20"
                        Margin="40,0,0,0"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />
            </HorizontalStackLayout>
            
 



            <ListView ItemsSource="{Binding Pjesme}" Margin="0,10,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <HorizontalStackLayout Margin="0,0,0,0">
                                <Image Source="{Binding putanjaSlika}" WidthRequest="50" HeightRequest="50" Aspect="AspectFill"/>

                                <Label Text="{Binding naziv}" VerticalOptions="Center" Padding="20,0" Margin="0,0,0,0"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#333"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Black"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
