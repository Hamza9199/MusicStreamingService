<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.Views.Playlista"
             
             >

    <ScrollView>
        <VerticalStackLayout Padding="10">



            <Image Source="{Binding CurrentPlaylista.putanjaSlika}" 
       WidthRequest="250" 
       HeightRequest="250"
                   Margin="0,20,0,20"
       Aspect="AspectFill" 
       HorizontalOptions="Center" 
       VerticalOptions="Center" />

            <HorizontalStackLayout Margin="0,20,0,20">
                <Label 
                        Text="{Binding CurrentPlaylista.naziv}"
                        FontSize="24"
                        
                        Margin="5,0,0,0"
                        FontAttributes="Bold"
                        VerticalOptions="Start" 
                        HorizontalOptions="Center" />

                
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                 <ImageButton
    Source="Images/playlist.svg"
    Command="{Binding Play}"
                     WidthRequest="30"
                     HeightRequest="30"
                     Margin="0,0,10,0"
    />
            <ImageButton
    Source="Images/playlistrepeat.svg"
WidthRequest="30"
                                     Margin="0,0,10,0"

HeightRequest="30"
Command="{Binding Ponavljaj}"
/>
            <ImageButton
    Source="Images/playlistshuffle.svg"
WidthRequest="30"
HeightRequest="30"
Command="{Binding Random}"
/>
            </HorizontalStackLayout>
           




            <CollectionView ItemsSource="{Binding Pjesme}" Margin="0,10,0,0"  SelectionMode="Single"
                 SelectedItem="{Binding CurrentSong, Mode=TwoWay}"
                 SelectionChangedCommand="{Binding PlayPauseCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Grid Padding="20,20" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding putanjaSlika}" 
               WidthRequest="50" 
            Grid.Column="0"
               HeightRequest="50" 
               Aspect="AspectFill" />
                            <Label Text="{Binding naziv}" 
               VerticalOptions="Center" 
               Padding="20,0" 
                Grid.Column="1"
               Margin="0,0,0,0" />

                            <ImageButton Source="Images/offlineobrisi"
     WidthRequest="30"
     HeightRequest="30"
                  Grid.Column="2"
                                         IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.Dozvoli}"
     Padding="10"
     Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ObrisiPjesmu}"
     CommandParameter="{Binding .}"
     HorizontalOptions="End"
     />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#333" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Black" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
