<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingService.MainPage"
             >
    <ContentPage.Content>
        <VerticalStackLayout 
            Padding="20"
            Spacing="20"
            VerticalOptions="FillAndExpand">

            <Label 
                Text="Hello, User!" 
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label 
                Text="Enter a YouTube link to play a song:" 
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="Gray" />

            <Entry 
                x:Name="YouTubeLinkEntry"
                Placeholder="Enter YouTube link here"
                Keyboard="Url"
                BackgroundColor="LightGray"
                TextColor="Black"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand" />

            <Button 
                Text="Play Song" 
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand"
                Clicked="OnPlaySongClicked" />

            <WebView 
                x:Name="YouTubeWebView"
                HeightRequest="300"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" 
                IsVisible="False" />

            <Button 
                Text="Logout" 
                BackgroundColor="#FF3B30"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand" 
                Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
